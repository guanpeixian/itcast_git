<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.CheckItemDao">
    <!--查询所有-->
    <select id="findAll" resultType="com.itheima.health.pojo.CheckItem">
        select * from t_checkitem;
    </select>

    <!--添加检查项-->
    <insert id="add" parameterType="com.itheima.health.pojo.CheckItem">
        insert into t_checkitem
        (code,name,sex,age,price,type,remark,attention)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention});
    </insert>

    <!--分页查询 第一种方法-->
    <!--问题：1：麻烦；2：不能通用，当前切换数据库的时候改动的代码多。-->
    <!--<select id="total" resultType="java.lang.Long">
        select count(*) from t_checkitem c
        <include refid="pageWhere"/>
    </select>
    <select id="findPage" resultType="com.itheima.health.pojo.CheckItem">
        select * from t_checkitem
        <include refid="pageWhere"/>
        limit #{currentPage},#{pageSize}
    </select>
    <sql id="pageWhere">
        <where>
            <if test="queryString.code != null">
                and c.code = #{queryString.code}
            </if>
            <if test="queryString.name != null and queryString.name != ''">
                and c.name like "%"#{queryString.name}"%"
            </if>
